<!DOCTYPE html>
<html>
	<head>
		<%- include ../partials/stylesheets.ejs %>
		<style type="text/css">
			label {
				min-width: 100px;
			}
		</style>
	</head>
	<body>
		<!-- Form container -->
		<div class="border border-primary rounded container-fluid" style="margin: 10px">
			<form method="post" novalidate>
				<legend>CSC 642 Summer 2018 Individual Assignment Scott Penn</legend>
				<legend>Registration Form</legend>
				<hr class="style1">
				<div class="offset-1">Fields marked with * indicate required fields.</div>
				<br>
				<!-- First and Last Names -->
				<div class="form-group row">
					<label for="firstName" class="col-form-label col-1 offset-1">*First Name: </label>
					<div class="col-3">
						<input name="firstName" type="text" class="form-control <%= firstNameValid %>" id="firstName" placeholder="First Name" value="<%= firstName %>" required>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							<%= firstNameMessage %>
						</div>
					</div>
					<label for="lastName" class="col-form-label col-1">*Last Name: </label>
					<div class="col-3">
						<input name="lastName" type="text" class="form-control <%= lastNameValid %>" id="lastName" placeholder="Last Name" value="<%= lastName %>" required>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							<%= lastNameMessage %>
						</div>
					</div>
				</div>
				<!-- Address -->
				<div class="form-group row">
					<label for="address" class="col-form-label col-1 offset-1">*Address: </label>
					<div class="col-3">
						<input name="address" type="text" class="form-control <%= addressValid %>" id="address" placeholder="Address" value="<%= address %>" required>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							<%= addressMessage %>
						</div>
					</div>
					<hr/>
				</div>
				<hr class="style1">
				<!-- Education Level -->
				<div class="form-group row">
					<label for="education" class="col-form-label col-1 offset-1">Education Level: </label>
					<div class="col-3">
						<select name="education" class="custom-select <%= educationValid %>" id="education">
							<option value="" selected>Choose Education Level</option>
							<option value="High School" <% if (education == "High School") { %> selected <% } %>>High School</option>
							<option value="College" <% if (education == "College") { %> selected <% } %>>College</option>
							<option value="Graduate Studies" <% if (education == "Graduate Studies") { %> selected <% } %>>Graduate Studies</option>
							<option value="Ph.D" <% if (education == "Ph.D") { %> selected <% } %>>Ph.D</option>
						</select>
						<div class="valid-feedback"></div>
					</div>
				</div>
				<!-- Income -->
				<div class="form-group row">
					<label for="income" class="col-form-label col-1 offset-1">Income: </label>
					<div class="col-3">
						<select name="income" class="custom-select <%= incomeValid %>" id="income">
							<option value="" selected>Choose Yearly Income</option>
							<option value="Less than $50,000" <% if (income == "Less than $50,000") { %> selected <% } %>>Less than $50,000</option>
							<option value="Between $50,000-$100,000" <% if (income == "Between $50,000-$100,000") { %> selected <% } %>>Between $50,000-$100,000</option>
							<option value="More than $100,000" <% if (income == "More than $100,000") { %> selected <% } %>>More than $100,000</option>
						</select>
						<div class="valid-feedback"></div>
					</div>
				</div>
				<hr class="style1">
				<!-- Phone and Email -->
				<div class="form-group row">
					<label for="phone" class="col-form-label col-1 offset-1">*Phone Number: </label>
					<div class="col-3">
						<input name="phone" type="tel" class="form-control <%= phoneValid %>" id="phone" placeholder="#######" value="<%= phone %>" required>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							<%= phoneMessage %>
						</div>
					</div>
					<label for="email" class="col-form-label col-1">Email Address: </label>
					<div class="col-3">
						<input name="email" type="email" class="form-control <%= emailValid %>" id="email" placeholder="email@address" value="<%= email %>">
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							<%= emailMessage %>
						</div>
					</div>
				</div>
				<hr class="style1">
				<!-- Password -->
				<div class="form-group row">
					<label for="password" class="col-form-label col-1 offset-1">*Enter Password: </label>
					<div class="col-3">
						<input name="password" type="password" class="form-control <%= passwordValid %>" id="password" required>
						<div class="invalid-feedback">
							<%= passwordMessage %>
						</div>
					</div>
				</div>
				<div class="form-group row">
					<label for="password-repeat" class="col-form-label col-1 offset-1">*Confirm Password: </label>
					<div class="col-3">
						<input name="passwordRepeat" type="password" class="form-control <%= passwordValid %>" id="password-repeat" required>
						<div class="invalid-feedback">
							<%= passwordRepeatMessage %>
						</div>
					</div>
				</div>
				<hr class="style1">
				<!-- Terms and Conditions -->
				<div class="form-group row">
					<div class="col-5 offset-1">
						<label for="terms" class="col-form-label">*I agree to the <a href="#">Terms and Conditions</a>â€ƒ</label>
						<input name="terms" type="checkbox" class="col-form-control <%= termsValid %>" id="terms" <% if (termsValid == "is-valid") { %> checked <% } %> required>
						<% if (termsValid == "is-invalid") { %>
						<div style="color: #dc3545; font-size: small;">
							You must accept the Terms and Conditions.
						</div>
						<% } %>
					</div>
				</div>
				<!-- Captcha -->
				<div class="form-group row">
					<label for="captcha" class="col-form-label col-2 offset-1">*Please verify that you are not a robot.</label>
					<%- captcha %>
					<div class="col-2">
						<input name="captcha" type="text" class="form-control <%= captchaValid %>" id="captcha" required>
						<div class="invalid-feedback">
							Incorrect input. Please try again.
						</div>
					</div>
				</div>
				<hr class="style1">
				<input type="submit" name="submit" value="submit"style="display: none" />
				<button type="submit" class="btn btn-danger offset-1" name="submit" value="cancel">Cancel</button>
				<button type="submit" class="btn btn-success offset-1" name="submit" value="submit">Submit Form</button>
				<br><br>
			</form>
		</div>
		<%- include ../partials/scripts.ejs %>
	</body>
</html>